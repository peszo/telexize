{
  "manifest_version": 2,
  "name": "Telexize",
  "description": "Simple extension, that redirects index.hu to telex.hu",
  "author": "peszo",
  "version": "0.1",
  "permissions": [
    "webNavigation",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/tlxz_64.png",
    "default_title": "Olvass ink√°bb Telex-et!"
  },
  "icons": {
    "16": "icons/tlxz_64.png",
    "32": "icons/tlxz_64.png",
    "64": "icons/tlxz_64.png"
  }
}
